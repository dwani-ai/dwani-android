<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true"> <!-- For transcriptions (left) -->
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="@color/whatsapp_message_in"/>
            <padding
                android:left="8dp"
                android:top="4dp"
                android:right="8dp"
                android:bottom="4dp"/>
        </shape>
    </item>
    <item> <!-- For responses (right) -->
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="@color/whatsapp_message_out"/>
            <padding
                android:left="8dp"
                android:top="4dp"
                android:right="8dp"
                android:bottom="4dp"/>
        </shape>
    </item>
</selector>